ENVIRONMENT=development

HTTP_PORT=8000

SERVICE_NAME_API=financial-api
SERVICE_NAME_CONSUMER=financial-consumer

OTEL_SERVICE_VERSION=1.0.0
OTEL_EXPORTER_OTLP_ENDPOINT=localhost:4317
OTEL_EXPORTER_OTLP_PROTOCOL=grpc
OTEL_EXPORTER_OTLP_INSECURE=true
OTEL_TRACE_SAMPLE_RATE=1.0
LOG_LEVEL=info
LOG_FORMAT=json

DB_DRIVER=postgres
DB_HOST=localhost
DB_PORT=26257
DB_USER=root
# SECURITY: Generate a strong password and set via environment variable
# Example: openssl rand -base64 32
DB_PASSWORD=CHANGE_ME_USE_STRONG_PASSWORD
DB_NAME=financial
DB_MAX_IDLE_CONNS=6
DB_MAX_OPEN_CONNS=25
DB_CONN_MAX_LIFE_TIME_MINUTES=5
DB_CONN_MAX_IDLE_TIME_MINUTES=2
MIGRATE_PATH=file://database/migrations

# SECURITY: Generate a strong secret key (minimum 64 characters)
# Example: openssl rand -hex 64
AUTH_SECRET_KEY=CHANGE_ME_GENERATE_SECURE_SECRET_KEY_MIN_64_CHARS
AUTH_TOKEN_DURATION=60

# RabbitMQ Configuration
# SECURITY: Use strong credentials and set via environment variable
# Format: amqp://username:password@host:port/
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
RABBITMQ_EXCHANGE=financial.events
RABBITMQ_QUEUE=financial_queue

# Worker Outbox Dispatcher Configuration
WORKER_DEFAULT_TIMEOUT_SECONDS=60
WORKER_MAX_CONCURRENT_JOBS=10
SERVICE_NAME_WORKER=financial-worker

# Consumer Configuration
CONSUMER_BROKER_TYPE=rabbitmq
CONSUMER_EXCHANGE=financial.events
CONSUMER_WORKER_COUNT=5
CONSUMER_PREFETCH_COUNT=10

# Kafka Configuration (futuro)
# CONSUMER_KAFKA_BROKERS=localhost:9092
# CONSUMER_KAFKA_GROUP_ID=financial-consumer-group

# SQS Configuration (futuro)
# CONSUMER_SQS_REGION=us-east-1
# CONSUMER_SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456/financial-queue
